<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

   <com.moe.wl.framework.widget.TitleBar
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:layout_height="@dimen/title_height"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--轮播图-->
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/ll_slider"
                android:layout_width="match_parent"
                android:background="@mipmap/ic_default_rectangle"
                android:layout_height="180dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/standard_padding"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/sp_common" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_small" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/font_gray"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容纳人数："
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_small" />

                    <TextView
                        android:id="@+id/tv_personnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会场面积："
                        android:textColor="@color/font_gray"
                        android:textSize="@dimen/sp_small" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/font_gray"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_small" />
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="会场设备"
                android:textColor="#c000"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/sp_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:background="@color/white">

                <com.moe.wl.framework.widget.NoSlidingGridView
                    android:id="@+id/gv_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="可供服务"
                android:paddingLeft="10dp"
                android:textColor="@color/font_black"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_common" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:background="@color/white">

                <com.moe.wl.framework.widget.NoSlidingGridView
                    android:id="@+id/gv_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="温馨提示："
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.会议室设备颜色深的为不提供的装备"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.会议室预订不收取任何费用"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/sp_small" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_subscribe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/font_blue"
        android:textSize="@dimen/sp_big"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="立即预订"/>

</LinearLayout>
