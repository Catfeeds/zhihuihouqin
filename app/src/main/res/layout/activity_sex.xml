<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sex"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.moe.wl.framework.widget.TitleBar
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"/>

    <RelativeLayout
        android:id="@+id/rl_man"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="男"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_select_man"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_girl"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="女"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_select_girl"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
