<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="总金额"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_bigger" />

        <TextView
            android:id="@+id/price_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="¥0"
            android:textColor="@color/tv_red"
            android:textSize="@dimen/sp_bigger" />

        <Button
            android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_bigger" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="@string/sarah_number"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger" />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/blue_minus"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sarah_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_big"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/blue_add" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="提示：每份工作餐费用为30元"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/name"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/alertdialog_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/phone_number"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/tv_black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="@dimen/sp_big" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/alertdialog_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/address"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_small" />

                <!--<TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_bigger" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/turn_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/alertdialog_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_arrive_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/arrive_time"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger" />

                <!--<TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_bigger" />-->

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/turn_right" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="订餐类型及期限"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="订餐类型"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <CheckBox
                        android:id="@+id/lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_box_button"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="午餐"
                        android:textColor="@color/tv_black"
                        android:textSize="@dimen/sp_big" />

                    <CheckBox
                        android:id="@+id/dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@drawable/check_box_button"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="晚餐"
                        android:textColor="@color/tv_black"
                        android:textSize="@dimen/sp_big" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/gray_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="订餐期限"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <RadioButton
                        android:id="@+id/one_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_box_button"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="一星期"
                        android:textColor="@color/tv_black"
                        android:textSize="@dimen/sp_big" />

                    <RadioButton
                        android:id="@+id/two_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@drawable/check_box_button"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="两星期"
                        android:textColor="@color/tv_black"
                        android:textSize="@dimen/sp_big" />

                    <RadioButton
                        android:id="@+id/one_mouth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:button="@drawable/check_box_button"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="一个月"
                        android:textColor="@color/tv_black"
                        android:textSize="@dimen/sp_big" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>