<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/regist2_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000" />

    <!-- 手机号 -->
    <RelativeLayout
        android:id="@+id/rl_uname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_common"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_rec_text"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/clock" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/tvStyle_tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv1"
            android:background="@color/transparent"
            android:ems="10"
            android:gravity="left"
            android:hint="密码"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:textColorHint="@color/tv_gray" />
    </RelativeLayout>
    <!-- 手机号 -->
    <RelativeLayout
        android:id="@+id/rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_common"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_rec_text"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/clock" />

        <EditText
            android:id="@+id/et_phone2"
            style="@style/tvStyle_tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv2"
            android:background="@color/transparent"
            android:ems="10"
            android:gravity="left"
            android:hint="确认密码"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:textColorHint="@color/tv_gray" />
    </RelativeLayout>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        style="@style/tvStyle_black_big"
        android:text="注册"
        android:background="@drawable/shape_login"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>