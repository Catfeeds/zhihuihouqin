<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order_cut_hear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/more_health_consult_title"
        android:layout_width="match_parent"
        android:background="#1000"
        android:layout_height="?actionBarSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="木北造型"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/iv_cut_hear_logo"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/logo" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shap_small_voil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="地址： "
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="机关教育部业务楼右侧100米"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shap_small_voil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="营业时间： "
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big" />

        <TextView
            android:id="@+id/tv_work_time"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8:00----21:00"
            android:textSize="@dimen/sp_big" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/standard_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shap_small_voil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="服务热线： "
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_big" />

            <TextView
                android:id="@+id/tv_phone"
                android:textColor="@color/tv_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textSize="@dimen/sp_big" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rv_hot_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/standard_padding"
            android:src="@drawable/turn_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray_trans" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/standard_padding"
            android:textColor="@color/tv_black"
            android:text="发型师"
            android:textSize="@dimen/sp_big" />

        <TextView
            android:id="@+id/barber"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_padding"
            android:drawableRight="@drawable/turn_right"
            android:text="全部7位技师 " />
    </LinearLayout>

    <GridView
        android:id="@+id/shop_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_now_order"
        android:background="#e9a839"
        android:text="立即预约"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="@dimen/sp_bigger"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
</RelativeLayout>
