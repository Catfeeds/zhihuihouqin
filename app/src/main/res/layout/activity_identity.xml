<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_identity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="姓名"
        android:textSize="@dimen/sp_big"
        android:textColor="@color/tv_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/tv_name"
        android:hint="请输入姓名"
        android:background="@null"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_big"
        android:textColor="@color/tv_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="电话"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/tv_phone"
                    android:hint="请输入电话号"
                    android:background="@null"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="身份证号"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/tv_identity_num"
                    android:hint="填写身份证号"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_big"
                    android:gravity="right"
                    android:background="@null"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:id="@+id/rl_positon"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="职位"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_position"
                    android:src="@drawable/turn_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="房间号"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/tv_room_num"
                    android:hint="填写房间号"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_big"
                    android:background="@null"
                    android:gravity="right"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="办公室座机"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/tv_office_phone"
                    android:hint="填写办公室座机"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_big"
                    android:gravity="right"
                    android:background="@null"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/gray_lighter"/>
            <TextView
                android:text="车辆信息"
                android:padding="16dp"
                android:textSize="@dimen/sp_bigger"
                android:textColor="@color/tv_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="车辆类型"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/tv_car_type"
                    android:hint="车辆类型"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_big"
                    android:gravity="right"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <TextView
                android:text="车牌号"
                android:padding="16dp"
                android:textSize="@dimen/sp_bigger"
                android:textColor="@color/tv_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:padding="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shengfen"
                    android:text="京A"
                    android:drawableRight="@drawable/group_down"
                    android:textSize="@dimen/sp_big"
                    android:layout_centerVertical="true"
                    android:textColor="@color/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_chepaihao"
                    android:textSize="@dimen/sp_big"
                    android:background="@null"
                    android:textColor="@color/tv_black"
                    android:hint="车牌号后五位"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_add_car_num"
                    android:layout_margin="12dp"
                    android:text="添加车辆"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/add_app"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <LinearLayout
                android:background="@color/gray_lighter"
                android:layout_width="match_parent"
                android:padding="@dimen/standard_padding"
                android:layout_height="120dp">
                <TextView
                    android:text="提示:暂无车辆信息可不填写,若多车辆信息可不填写,若多车辆可点击下方添加惊醒多辆车提交认证"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
<TextView
    android:id="@+id/tv_commit"
    android:layout_alignParentBottom="true"
    android:text="提交"
    android:background="@color/white"
    style="@style/tvStyle_tv_black"
    android:textSize="@dimen/sp_big"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize" />
</RelativeLayout>
