<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_dry_clean_order"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/reserve_info_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000"/>
    <TextView
        android:textColor="#000"
        android:textSize="@dimen/sp_bigger"
        android:text="个人信息"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_below="@+id/reserve_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#a000"
            android:textSize="@dimen/sp_big"
            android:text="姓名"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_marginRight="10dp"
            android:textColor="#a000"
            android:textSize="@dimen/sp_big"
            android:text="王乐其"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"/>
    <RelativeLayout
    android:id="@+id/rl_phone"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:layout_below="@+id/reserve_info_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#a000"
        android:textSize="@dimen/sp_big"
        android:text="电话号"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_marginRight="10dp"
        android:textColor="#a000"
        android:textSize="@dimen/sp_big"
        android:text="1234567890"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"/>
    <RelativeLayout
        android:layout_below="@id/rl_name"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#a000"
            android:textSize="@dimen/sp_big"
            android:text="预计送达时间"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_marginRight="10dp"
            android:textColor="#a000"
            android:textSize="18sp"
            android:text="上午8点"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textColor="#000"
        android:textSize="@dimen/sp_bigger"
        android:text="订单信息"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  <ListView
      android:id="@+id/lv_order_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/bottom_height">
        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="总金额 ￥34.00"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_bigger"
            android:textColor="@color/tv_red"
            android:background="@color/gray_light"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确认提交"
            android:gravity="center"
           android:textSize="@dimen/sp_bigger"
            android:textColor="@color/white"
            android:background="@color/bg_color"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
