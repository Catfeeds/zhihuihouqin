<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_padding">

        <TextView
            android:id="@+id/tv_yiwu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money1"
                style="@style/tvStyle_text_black"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/iv_minus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/blue_minus" />

            <TextView
                android:id="@+id/tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:minWidth="18dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/tv_red"
                android:textSize="@dimen/sp_small" />

            <ImageView
                android:id="@+id/iv_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/blue_add" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_remark"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/standard_padding"
        android:paddingRight="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        android:orientation="horizontal">
        <TextView
            android:text="订单备注: "
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_remark"
            android:hint="填写订单备注"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:minHeight="60dp"
            android:gravity="top"
            android:background="@null"
            android:textColorHint="@color/tv_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
</LinearLayout>