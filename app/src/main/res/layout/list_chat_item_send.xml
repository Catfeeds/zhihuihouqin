<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:id="@+id/tv_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:padding="4dp"
    android:textSize="@dimen/sp_smaller"
    android:background="@drawable/shape_chat_bg"
    android:layout_gravity="center_horizontal"
    android:text="昨天上午 8:49"
    android:layout_margin="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avatar2"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_common"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/iv_avatar"
            android:layout_marginLeft="5dp"
            android:background="@drawable/send_msg_normal"/>
        <!--<ImageView
            android:id="@+id/iv_state"
            android:layout_toLeftOf="@id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/msg_error"/>-->
    </RelativeLayout>
</LinearLayout>