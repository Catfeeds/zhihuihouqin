<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<cn.lc.model.framework.widget.TitleBar
    android:id="@+id/personal_info_titlebar"
    android:layout_width="match_parent"
    android:background="@color/gray_trans"
    android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:id="@+id/rl_header"
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="头像"
            android:layout_centerVertical="true"
            style="@style/tvStyle_black_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/partner_luffy"
                android:id="@+id/civ_header"
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_nicheng"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="昵称"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_margin="8dp"
            android:id="@+id/et_nicheng"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="手机号"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_margin="8dp"
            android:id="@+id/et_phone"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_roomnum"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="房间号"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
           android:layout_margin="8dp"
            android:id="@+id/et_room_num"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_office_phone"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="办公室座机"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:layout_margin="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/et_office_phone"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="性别"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="男"
                android:id="@+id/tv_sex"
                android:layout_margin="8dp"
                android:textSize="@dimen/sp_big"
                android:textColor="@color/tv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:id="@+id/rl_position"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="职位"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
     <ImageView
         android:src="@drawable/turn_right"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_trans"/>
</LinearLayout>
