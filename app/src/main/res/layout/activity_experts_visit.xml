<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/blue"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_doc_detail_back"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="18dp"
                    android:src="@mipmap/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:layout_below="@+id/iv_doc_detail_back"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_doc_photo"
                        android:src="@drawable/partner_luffy"
                        android:scaleType="centerCrop"
                        android:layout_width="120dp"
                        android:layout_height="140dp" />
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_doctor_name"
                                android:text="肖新华"
                                android:textSize="@dimen/sp_bigger"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_doctor_position"
                                android:text="主任医师"
                                android:textSize="@dimen/sp_small"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressTint="@color/yellow"
                                android:theme="@style/RatingBar"
                                android:progressBackgroundTint="@color/gray"
                                android:secondaryProgressTint="@color/gray"
                                android:rating="3"/>
                            <TextView
                                android:id="@+id/tv_star_num"
                                android:text="4.9"
                                android:textSize="@dimen/sp_small"
                                android:layout_marginLeft="3dp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:text="问诊量："
                                android:textSize="@dimen/sp_small"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_seeing"
                                android:text="2320"
                                android:textSize="@dimen/sp_small"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:text="所属医院："
                                android:textSize="@dimen/sp_big"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_hospital"
                                android:text="主任医师"
                                android:textSize="@dimen/sp_small"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#1000"/>
            <TextView
                android:text="擅长：当日预约详细时间（灰色时间段为不可预约）"
                android:textSize="@dimen/sp_small"
                android:textColor="@color/tv_black"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#1000"/>
            <TextView
                android:text="问诊服务"
                android:textColor="@color/black"
                android:padding="10dp"
                android:textSize="@dimen/sp_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="预约人数"
                    android:padding="10dp"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_person_num"
                    android:text="20/25"
                    android:padding="10dp"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="工作时间"
                    android:padding="10dp"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_work_time"
                    android:text="8:00-17:30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_small"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#1000"/>
            <TextView
                android:text="个人简介："
                android:textSize="@dimen/sp_bigger"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_content_recomment"
                android:text="  个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介
            绍个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介绍
            个人简介内容介绍个人简介内容介绍"
                android:layout_marginRight="8dp"
                android:textSize="@dimen/sp_small"
                android:textColor="@color/tv_black"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:background="#1000"
                android:padding="8dp"
                android:text="用户评价"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <cn.lc.model.ui.mywidget.NoSlideRecyclerView
                android:id="@+id/nsrlv_doc_tetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_check_all"
                android:gravity="center"
                android:text="查看全部（211）"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:background="#1000"
                android:layout_height="120dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iv_doc_detial_consult"
            android:layout_width="0dp"
            android:text="咨询"
            android:textSize="@dimen/sp_bigger"
            android:textColor="@color/tv_black"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1"
            android:src="@mipmap/tab3_y"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_now_order"
            android:layout_width="0dp"
            android:clickable="true"
            android:background="#00a6ff"
            android:text="立即预约"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_bigger"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
</RelativeLayout>

