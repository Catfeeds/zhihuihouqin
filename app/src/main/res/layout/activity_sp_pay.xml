<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sp_pay"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_page"
        />
    <RelativeLayout
        android:padding="@dimen/normal_padding"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_common"
            android:textColor="@color/tv_black"
            android:text="需要支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_need_pay"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_common"
            android:textColor="@color/tv_red"
            android:text="￥0.0"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pay"
            android:paddingLeft="@dimen/normal_padding"
            android:paddingTop="@dimen/normal_padding"
            android:paddingBottom="@dimen/normal_padding"
            android:src="@drawable/recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="@dimen/normal_padding"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_weixin_pay"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_common"
                    android:textColor="@color/tv_black"
                    android:text="对公账户"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_pay_check"
                    android:layout_centerVertical="true"
                    android:src="@drawable/unselect"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:padding="@dimen/normal_padding"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_common"
            android:textColor="@color/tv_black"
            android:text="可用余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_available_balance"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_common"
            android:textColor="@color/tv_black"
            android:text="￥0"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_page"
         >
        <TextView
            android:id="@+id/tv_now_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_bigger"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="立即支付"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_blue_rounded"
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
