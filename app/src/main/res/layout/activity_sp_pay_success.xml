<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sp_pay_success"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"/>
    <TextView
        android:layout_width="match_parent"
        android:padding="16dp"
        android:text="支付成功"
        android:background="@color/gray_lighter"
        android:drawableLeft="@drawable/selected"
        android:textSize="@dimen/sp_small"
        android:textColor="@color/tv_blue"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:text="购买商品"
            android:layout_above="@+id/tv_need_pay"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="$4.50"
            android:id="@+id/tv_need_pay"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/sp_bigger"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="缴费类型"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jiaofei_type"
            android:text="办公用品"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="交易时间"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jiaoyi_time"
            android:text="办公用品"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="支付方式"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pay_mothed"
            android:text="办公用品"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="交易单号"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jiaoyidanhao"
            android:text="办公用品"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_check_order"
        android:background="@drawable/shape_gray_content"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small"
        android:gravity="center"
        android:text="查看订单"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
