<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_laifangshiyou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_trans"
    android:orientation="vertical">

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="12dp"
        android:background="@drawable/background_edit">

        <EditText
            android:id="@+id/et_shiyou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入来访事由"
            android:padding="8dp"
            android:textColor="@color/tv_black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/sp_big" />
    </LinearLayout>

    <Button
        android:id="@+id/tb_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_bigger" />
</LinearLayout>
