<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_laifangshiyou"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_trans"
    android:layout_height="match_parent">
<cn.lc.model.framework.widget.TitleBar
    android:id="@+id/title"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:layout_height="180dp">
       <LinearLayout
           android:layout_marginTop="12dp"
           android:layout_marginBottom="12dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               android:id="@+id/et_shiyou"
               android:background="@null"
               android:textSize="@dimen/sp_common"
               android:textColor="@color/tv_black"
               android:hint="请输入来访事由"
               android:textColorHint="@color/gray_light"
               android:padding="@dimen/standard_padding"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/tb_confirm"
        android:layout_margin="16dp"
        android:text="确定"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_bigger"
        android:gravity="center"
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
