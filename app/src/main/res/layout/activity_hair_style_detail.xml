<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hair_style_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.moe.wl.framework.widget.TitleBar
            android:id="@+id/more_product_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#2000" />

        <ImageView
            android:id="@+id/iv_hair_style"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/partner_luffy" />

        <TextView
            android:id="@+id/tv_hair_style_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="名称:空气刘海"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small" />

        <TextView
            android:id="@+id/tv_how_much"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="价格:￥66"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small" />

        <TextView
            android:id="@+id/tv_hair_style_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            android:text="咯松井大辅卡上就房价快速ask JFK时间算了JFK时间 "
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small" />
    </LinearLayout>

</RelativeLayout>
