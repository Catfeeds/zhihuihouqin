<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_posted"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.lc.model.framework.widget.TitleBar
            android:id="@+id/activity_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" />
        <ImageView
            android:id="@+id/iv_posted_des"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_below="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="发布人姓名："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_posted_name"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="手机号："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:background="@null"
            android:hint="请输入电话号"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="民族："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_minzu"
            android:background="@null"
            android:hint="请输入民族"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray_lighter"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:id="@+id/rl_time"
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="活动时间："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/et_activity_time"
            android:background="@null"
            android:src="@drawable/turn_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="活动地点："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_activity_address"
            android:background="@null"
            android:hint="请输入报名地点"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="人数限制："
            android:padding="@dimen/standard_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_person_limit"
            android:background="@null"
            android:hint="请输入人数限制"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <TextView
            android:text="活动内容："
            android:padding="@dimen/standard_padding"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_activity_content"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/sp_small"
            android:textColor="@color/tv_black"
            android:hint="请输入活动内容..."
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/add_photo"
            android:layout_alignParentBottom="true"
            android:src="@drawable/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:background="@color/gray_lighter"
    android:layout_weight="1">
    <TextView
        android:text="请确定以上信息无误后，点击发布"
        android:textSize="@dimen/sp_small"
        android:textColor="@color/tv_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
<TextView
    android:id="@+id/tv_submit"
    android:text="提交审核"
    android:layout_alignParentBottom="true"
    style="@style/tvStyle_black_big"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_height" />
</LinearLayout>
