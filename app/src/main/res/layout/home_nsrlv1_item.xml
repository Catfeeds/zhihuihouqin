<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_firstrv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_firstrv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_firstrv_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_firstrv_logo"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="美食合理搭配，健康是吃出来的，营养套餐为你贴心安排"
        android:textColor="#000"
        android:textSize="@dimen/sp_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_firstrv_logo"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_firstrv_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_firstrv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17-07-14 10:28"
            android:textSize="@dimen/sp_small" />

        <TextView
            android:id="@+id/tv_firstrv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="机关食堂"
            android:textSize="@dimen/sp_small" />
    </LinearLayout>
</RelativeLayout>