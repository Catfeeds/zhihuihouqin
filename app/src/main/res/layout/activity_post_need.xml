<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_post_need"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.moe.wl.framework.widget.TitleBar
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_lighter" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="姓名:"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_common" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray_trans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="电话: "
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入手机号"
                android:gravity="right"
                android:background="@null"
                android:padding="12dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/sp_common" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_trans" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_sp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="商品名称:"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common" />

            <EditText
                android:id="@+id/et_sp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入商品名称"
                android:gravity="right"
                android:background="@null"
                android:padding="12dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/sp_common" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_trans"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_sp_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="商品数量:"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common" />

            <EditText
                android:id="@+id/et_sp_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入商品数量"
                android:background="@null"
                android:padding="12dp"
                android:gravity="right"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/sp_common" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_trans"/>

        <TextView
            android:id="@+id/tv_need_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="需求备注:"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_common" />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@drawable/shape_remark"
            android:layout_height="180dp">
            <EditText
                android:id="@+id/et_write"
                android:textSize="@dimen/sp_common"
                android:textColor="@color/tv_black"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:layout_marginRight="8dp"
                android:hint="请输入你想要的商品详细内容..."
                android:textColorHint="@color/tv_gray_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue_confirm"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_bigger" />
</LinearLayout>
