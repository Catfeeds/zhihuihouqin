<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/standard_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selected" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/standard_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/partner_luffy" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/standard_padding">

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文具用品"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_left"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_common" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_rec_text"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_right"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_common" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_lighter" />
</LinearLayout>