<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="50dp"
            android:background="@null">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_close"
                        android:src="@drawable/close"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="20sp"
                        android:layout_height="20dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/price"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_red"
                    android:text="$10.8-12.8"
                    android:layout_marginLeft="160dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_kucun"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:text="库存1231件"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="160dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:text="选择 颜色分类"
                    android:layout_marginLeft="160dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter" />

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:text="颜色分类"
                android:id="@+id/tv_color_category"
                android:layout_margin="@dimen/standard_padding"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <cn.lc.model.ui.mywidget.FlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginRight="@dimen/standard_padding"/>
            <View
                android:id="@+id/view1"
                android:layout_marginTop="@dimen/standard_padding"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
            <RelativeLayout
                android:id="@+id/rl_count"
                android:paddingLeft="@dimen/standard_padding"
                android:paddingRight="@dimen/standard_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="购买数量"
                    android:id="@+id/tv_count"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/standard_padding"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/minus"
                        android:text="--"
                        android:padding="8dp"
                        android:background="@color/gray_lighter"
                        android:textSize="@dimen/sp_bigger"
                        android:textColor="@color/tv_black"
                        android:layout_width="40dp"
                        android:gravity="center"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/tv_sum"
                        android:text="0"
                        android:padding="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:background="@color/gray_lighter"
                        android:textSize="@dimen/sp_bigger"
                        android:textColor="@color/tv_black"
                        android:layout_width="40dp"
                        android:gravity="center"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/tv_add"
                        android:text="+"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@color/gray_lighter"
                        android:textSize="@dimen/sp_bigger"
                        android:textColor="@color/tv_black"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_below="@+id/rl_count"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="100dp"
                android:background="@color/gray_lighter"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentBottom="true"
        android:background="@color/tv_yellow"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_bigger" />
</RelativeLayout>