<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/regist_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000" />
    <!-- 手机号 -->
    <RelativeLayout
        android:id="@+id/rl_uname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_common"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_rec_text"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/gray_phone" />

        <ImageView
            android:id="@+id/iv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/close" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/iv_uname"
            android:layout_toRightOf="@+id/iv1"
            android:background="@color/transparent"
            android:gravity="left"
            android:hint="手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColorHint="@color/tv_gray"
            android:textSize="@dimen/sp_small" />

    </RelativeLayout>
    <!-- 验证码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_rec_text"
            android:focusableInTouchMode="true"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/clock" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/iv2"
                android:background="@color/transparent"
                android:gravity="left"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:minWidth="120dp"
                android:paddingLeft="10dip"
                android:textColorHint="@color/tv_gray"
                android:textSize="@dimen/sp_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/blue"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:text="点击获取"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next_step"
        style="@style/tvStyle_black_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_login"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="下一步" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <!-- android:button="@drawable/selector_check"-->
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="我同意"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_smaller" />

        <TextView
            android:id="@+id/tv_agreen"
            style="@style/tvStyle_blue_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="注册即同意君和君泰app服务协议" />
    </LinearLayout>
</LinearLayout>