<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/regist_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000" />
    <!-- 手机号 -->
    <RelativeLayout
        android:id="@+id/rl_uname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_common"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_rec_text"
        android:focusableInTouchMode="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/gray_phone" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/tvStyle_tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv1"
            android:background="@color/transparent"
            android:ems="10"
            android:gravity="left"
            android:hint="手机号码"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:textColorHint="@color/tv_gray" />

        <ImageView
            android:id="@+id/iv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close" />
    </RelativeLayout>
    <!-- 验证码 -->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/shape_rec_text"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/clock" />

            <EditText
                android:id="@+id/et_code"
                style="@style/tvStyle_tv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv2"
                android:background="@color/transparent"
                android:ems="8"
                android:gravity="left"
                android:hint="验证码"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:textColorHint="@color/tv_gray" />


        </RelativeLayout>

        <Button
            android:id="@+id/btn_getcode"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/gray_lighter"
            android:text="点击获取" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_next_step"
        android:layout_margin="10dp"
        style="@style/tvStyle_black_big"
        android:text="下一步"
        android:background="@drawable/shape_login"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
<!-- android:button="@drawable/selector_check"-->
        <CheckBox
            android:id="@+id/checkbox"
            android:text="我同意"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_agreen"
            style="@style/tvStyle_blue_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="注册即同意君和君泰app服务协议" />
    </LinearLayout>
</LinearLayout>