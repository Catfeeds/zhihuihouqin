<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sp_confirm_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.lc.model.framework.widget.TitleBar
            android:id="@+id/all_sp_comment_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#2000" />
        <RelativeLayout
            android:id="@+id/rl_user_detail_info"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_address"
                android:scaleType="centerCrop"
                android:src="@drawable/address"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toRightOf="@+id/iv_address"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_user_info"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small"
                    android:text="王有才 先生 13521885846"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv_send_to_address"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small"
                    android:text="送至:教育部业务楼401会议室"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turn_right"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gray_lighter"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/bg_color"/>
            <ImageView
                android:id="@+id/iv_time"
                android:src="@drawable/address"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:text="期望送货时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_smaller"
                android:text="尽快送达|预计"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_send_time"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_smaller"
                android:text="14:11"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gray_lighter"/>

        <LinearLayout
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_sp_pic"
                android:src="@drawable/partner_luffy"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/tv_sp_category"
                android:text="票夹 燕尾夹"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_count"
                    android:textColor="@color/tv_black"
                    android:text="x1"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/tv_red"
                    android:text="￥4.5"
                    android:textSize="@dimen/sp_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_lighter"/>

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:text="订单备注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_write_other"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/sp_small"
                android:drawableRight="@drawable/turn_right"
                android:text="可填写其他需求"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_common"
                android:text="商品金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sp_money"
                android:layout_alignParentRight="true"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/sp_small"
                android:text="$4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_lighter"/>
    </LinearLayout>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_height">
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="实付款￥4.50"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_common"
        android:background="@color/gray"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_now_pay"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_common"
        android:background="@color/bg_color"
        android:layout_height="match_parent" />
</LinearLayout>
</RelativeLayout>
