<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_lai_fang"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/laifang_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/laifang_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000"/>
    <ScrollView
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:text="姓名:"
                android:layout_gravity="center_vertical"
                style="@style/tvStyle_black_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_name"
                android:layout_margin="8dp"
                android:textSize="@dimen/sp_small"
                android:textColor="@color/tv_black"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="@color/tv_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="手机号:"
                    android:layout_gravity="center_vertical"
                    style="@style/tvStyle_black_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textColorHint="@color/tv_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:text="来访人房间号:"
                    android:layout_gravity="center_vertical"
                    style="@style/tvStyle_black_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_room_num"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:background="@null"
                    android:hint="请输入房间号"
                    android:textColorHint="@color/tv_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:id="@+id/rl_laifangshiyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp">
            <TextView
                android:text="来访事由"
                android:layout_gravity="center_vertical"
                style="@style/tvStyle_black_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:id="@+id/rl_revice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp">
            <TextView
                android:text="预计到达时间"
                android:layout_gravity="center_vertical"
                style="@style/tvStyle_black_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:id="@+id/rl_likai_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp">
            <TextView
                android:text="预计离开时间"
                android:layout_gravity="center_vertical"
                style="@style/tvStyle_black_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="来访时间:"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                style="@style/tvStyle_black_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_once"
                    android:text="一次"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_a_week"
                    android:text="一星期"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_bangeyue"
                    android:text="半个月"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_long"
                    android:text="长期"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/gray_lighter"/>
        </LinearLayout>
        <TextView
            android:text="车辆信息"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/sp_bigger"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:id="@+id/rl_car_type"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="车辆类型"
                android:textSize="@dimen/sp_big"
                android:textColor="@color/tv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_car_type"
                android:text="车辆类型"
                android:textSize="@dimen/sp_small"
                android:gravity="right"
                android:textColor="@color/tv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_toRightOf="@id/tv_car_type"
                android:layout_marginLeft="8dp"
                android:src="@drawable/turn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <TextView
            android:text="车牌号"
            android:padding="16dp"
            android:textSize="@dimen/sp_bigger"
            android:textColor="@color/tv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:padding="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shengfen"
            android:text="京A"
            android:drawableRight="@drawable/group_down"
            android:textSize="@dimen/sp_big"
            android:layout_centerVertical="true"
            android:textColor="@color/tv_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_chepaihao"
            android:textSize="@dimen/sp_big"
            android:background="@null"
            android:textColor="@color/tv_black"
            android:hint="车牌号后五位"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_commit"
        android:layout_alignParentBottom="true"
        android:text="提交"
        android:background="@color/white"
        style="@style/tvStyle_tv_black"
        android:textSize="@dimen/sp_big"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
</RelativeLayout>
