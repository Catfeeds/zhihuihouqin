<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dry_clean_reserve_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/more_health_consult_title"
        android:layout_width="match_parent"
        android:background="#1000"
        android:layout_height="?actionBarSize" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000" />
        <RelativeLayout
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="姓名"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="手机号"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_phone_num"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <RelativeLayout
            android:id="@+id/rl_set_time"
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="预计送达时间"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_time"
                    android:textSize="@dimen/sp_small"
                    android:textColor="@color/tv_black"
                    android:text="2017-9-18 9:30"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_send_time"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/turn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1000" />
        <TextView
            android:text="衣服类型"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:padding="@dimen/standard_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/rv_dry_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_lighter"/>
        <TextView
            android:id="@+id/tv_more"
            android:text="更多"
            android:layout_width="match_parent"
            style="@style/tvStyle_tv_black"
            android:padding="@dimen/standard_padding"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray_lighter"
            android:id="@+id/view3" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_bigger"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="共几件"
            android:paddingLeft="20dp"
            android:textColor="@color/tv_black"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_bigger"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:background="@color/bg_color"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
