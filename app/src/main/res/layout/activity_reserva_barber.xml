            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_lighter"/>
            <LinearLayout
                android:id="@+id/ll_huli_list"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#1000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="需要支付"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tv_need_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥78"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#1000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1000"
                android:padding="10dp"
                android:text="预留手机号"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="18511286166"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1000"
                android:padding="10dp"
                android:text="凭手机号到店享受服务"
                android:textColor="#f74040"
                android:textSize="@dimen/sp_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="订单备注"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_big" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shap_text"
                android:padding="10dp">

                <EditText
                    android:id="@+id/et_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="你想对你的设计师说..."
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/word_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:text="0/100"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#1000" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_sum_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="共1项服务 合计："
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_small" />

        <TextView
            android:id="@+id/tv_how_much"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_sum_service"
            android:text="￥30.00"
            android:textColor="@color/tv_red"
            android:textSize="@dimen/sp_big" />

        <Button
            android:id="@+id/tb_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#ed6060"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="提交预约"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_big" />
    </RelativeLayout>
</LinearLayout>
