<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_book_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/reserve_info_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:id="@+id/view_title"
        android:layout_below="@+id/reserve_info_title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#2000" />

    <ScrollView
        android:layout_below="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_book_pic"
                    android:src="@mipmap/ic_default_book"
                    android:layout_width="80dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_book_name"
                            android:text="人性的弱点"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_bigger"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_state"
                            android:text="在架上"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/green"
                            android:textSize="@dimen/sp_small"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_gravity="center_vertical"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="@color/yellow"
                            android:theme="@style/RatingBar"
                            android:progressBackgroundTint="@color/gray"
                            android:secondaryProgressTint="@color/gray"
                            android:rating="3"/>
                        <TextView
                            android:id="@+id/tv_star_num"
                            android:text="4.9分"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/sp_small"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_author"
                        android:text="作者:戴尔.卡耐基"
                        android:textSize="@dimen/sp_small"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_chubanshe"
                        android:text="新华日报出版社"
                        android:textSize="@dimen/sp_small"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_authors_introduce"
                    android:textSize="@dimen/sp_big"
                    android:text="作者介绍:"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_lighter"/>

                <TextView
                    android:id="@+id/tv_authors_introduce_content"
                    android:textSize="@dimen/sp_small"
                    android:text="作者介绍的内容"
                    android:padding="16dp"
                    android:textColor="@color/tv_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_book_introduce"
                    android:textSize="@dimen/sp_big"
                    android:text="书籍简介:"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_lighter"/>
                <TextView
                    android:id="@+id/tv_book_introduce_content"
                    android:textSize="@dimen/sp_small"
                    android:text="书籍简介的内容"
                    android:padding="16dp"
                    android:textColor="@color/tv_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collect" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_info_share" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_now_borrowing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/tv_blue"
            android:gravity="center"
            android:text="立即借阅"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_bigger" />
    </LinearLayout>
</RelativeLayout>
