<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_barber_jianjie"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/jianjie_content_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000"/>
    <TextView
        android:id="@+id/tv_jianjie_content"
        android:textSize="@dimen/sp_big"
        android:textColor="@color/tv_black"
        android:text=""
        android:lineSpacingExtra="3dp"
        android:layout_margin="10dp"
       android:padding="@dimen/standard_padding"
        android:background="@drawable/shape_rec_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
