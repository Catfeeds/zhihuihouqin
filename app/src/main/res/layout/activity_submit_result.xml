<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sbumit_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="cn.lc.model.ui.main.activity.SubmitSuccessActivity">
    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/heath_serverce_title"
        android:layout_width="match_parent"
        android:background="#1000"
        android:layout_height="?actionBarSize"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"/>
    <ImageView
        android:id="@+id/iv_submit_or_pay"
        android:layout_marginTop="60dp"
        android:src="@drawable/selected"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/tv_submit_success"
        android:text="提交完成"
        android:textSize="22sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="恭喜您,提交成功"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:text="很荣幸为您服务,请将衣服送至干洗店"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

