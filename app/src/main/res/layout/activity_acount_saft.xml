<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_acount_saft"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
    >

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="12dp"
            android:background="@drawable/shape_commit_white"
            >

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:padding="@dimen/standard_padding"
                android:paddingLeft="@dimen/standard_padding"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/sp_small"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/standard_padding"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_commit_white"
            android:gravity="center"
            android:padding="12dp"
            android:text="发送验证码"
            android:textColor="@color/tv_red"
            android:textSize="@dimen/sp_small"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_padding"
            android:background="@drawable/shape_commit_white"
            >

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="请输入手机号短信中的验证码"
                android:padding="12dp"
                android:textColor="@color/tv_black"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/sp_small"
                />
        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="6dp"
        >
        <!--android:background="#d7fad7"-->
        <TextView
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="下一步"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_common"
            />
    </android.support.v7.widget.CardView>

</LinearLayout>
