<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pro_perrty_post_succ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter" />

    <ImageView
        android:id="@+id/iv_submit_or_pay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/submit_success" />

    <TextView
        android:id="@+id/tv_submit_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="发布成功"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_check_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shap_check_order"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:text="查看订单"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_book_submit_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="感谢您的体骄傲，我方将以最快时间为您来采购，买后会以消息或短息方式提示您，感谢你的申请。"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small"
        android:visibility="gone" />
</LinearLayout>
