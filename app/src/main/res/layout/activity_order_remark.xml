<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_remark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/all_sp_comment_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_gray_xuxian"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="35dp">
        <EditText
            android:id="@+id/et_scanner"
            android:padding="12dp"
            android:gravity="top"
            android:background="@null"
            android:hint="请输入订单备注..."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:padding="@dimen/standard_padding"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="确定"
        android:layout_margin="16dp"
        android:background="@drawable/shape_blue_confirm"
        android:textSize="@dimen/sp_bigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
