<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_remark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_lighter"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_margin="16dp"
        android:background="@drawable/shape_remark"
        android:layout_width="match_parent"
        android:padding="@dimen/standard_padding"
        android:layout_height="180dp" >
        <EditText
            android:id="@+id/et_write"
            android:textSize="@dimen/sp_common"
            android:textColor="@color/tv_black"
            android:hint="请输入订单备注..."
            android:textColorHint="@color/tv_gray_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="8dp"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_bigger"
            android:gravity="center"

            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</LinearLayout>
