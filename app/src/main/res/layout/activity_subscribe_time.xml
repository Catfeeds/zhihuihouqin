<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/title_height">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_title_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:layout_centerInParent="true"
            android:text="预订时间" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_week1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_week2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_week3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_week4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="#444444"
            />

        <TextView
            android:id="@+id/tv_week5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="#444444"
            />

        <TextView
            android:id="@+id/tv_week6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="#444444"
            />

        <TextView
            android:id="@+id/tv_week7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="#444444"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_date3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_date4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_date5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_date6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

        <TextView
            android:id="@+id/tv_date7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_page"
            android:textColor="@color/font_black"
            />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:paddingTop="15dp"
       android:paddingBottom="15dp"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_time1"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:layout_marginRight="20dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="8:00~9:00"/>

           <TextView
               android:id="@+id/tv_time2"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="9:00~10:00"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_time3"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:layout_marginRight="20dp"
               android:text="10:00~11:00"/>

           <TextView
               android:id="@+id/tv_time4"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="11:00~12:00"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_time5"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:layout_marginRight="20dp"
               android:text="14:00~15:00"/>

           <TextView
               android:id="@+id/tv_time6"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:text="15:00~16:00"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_time7"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:layout_marginRight="20dp"
               android:text="16:00~17:00"/>

           <TextView
               android:id="@+id/tv_time8"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:background="@mipmap/bg_btn_transparency"
               android:gravity="center"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:text="17:00~18:00"/>

       </LinearLayout>

   </LinearLayout>

</LinearLayout>
