<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_order"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/reserve_info_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000"/>
    <TextView
        android:textColor="#000"
        android:textSize="@dimen/sp_bigger"
        android:text="就诊人信息"
        android:paddingLeft="10dp"
       android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_below="@+id/reserve_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="姓名"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_marginRight="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="王乐其"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"/>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_below="@id/rl_name"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="电话号"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_marginRight="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="1381234678"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_bigger"
        android:text="预约信息"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="预约排名"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/reservation_num"
            android:layout_marginRight="10dp"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_big"
            android:text="20/50"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1000"/>
    <LinearLayout
        android:layout_below="@+id/iv_doc_detail_back"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_doc_photo"
            android:src="@drawable/partner_luffy"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:text="肖新华"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_bigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_doctor_position"
                    android:text="主任医师"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/yellow"
                    android:theme="@style/RatingBar"
                    android:progressBackgroundTint="@color/gray"
                    android:secondaryProgressTint="@color/gray"
                    android:rating="3"/>
                <TextView
                    android:id="@+id/tv_star_num"
                    android:text="4.9"
                    android:textSize="@dimen/sp_big"
                    android:textColor="@color/tv_black"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:text="问诊量："
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_seeing"
                    android:text="2320"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal">
                <TextView
                    android:text="所属医院："
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_hospital"
                    android:text="主任医师"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="温馨提示:"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_big"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:background="#1000"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_commit"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="提交"
        android:textSize="@dimen/sp_bigger"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
</LinearLayout>
