<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_borrow_order"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.lc.model.framework.widget.TitleBar
        android:id="@+id/reserve_info_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2000" />
   <include layout="@layout/personal_info"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_lighter"/>
    <RelativeLayout
        android:id="@+id/rl_time"
        android:padding="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="预计取书时间"
            android:textSize="@dimen/sp_big"
            android:textColor="@color/tv_black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_take_book_time"
            android:layout_alignParentRight="true"
            android:src="@drawable/turn_right"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_lighter"/>
<TextView
    android:id="@+id/tv_confirm"
    android:textColor="@color/white"
    android:textSize="@dimen/sp_bigger"
    android:text="确定"
    android:background="@color/blue"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_height" />
</LinearLayout>
