<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/bg_page"/>
    <RelativeLayout
        android:padding="@dimen/standard_padding"
        android:id="@+id/rl_tangfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_yewu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烫发"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_common" />

        <TextView
            android:id="@+id/tv_price_fanwei"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_red"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/iv_upordown1"
            android:text="￥100-200"
            android:textSize="@dimen/sp_common" />

        <ImageView
            android:id="@+id/iv_upordown1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/group_down" />
    </RelativeLayout>

</LinearLayout>