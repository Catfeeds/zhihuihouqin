<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/iv_doc_detail_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:src="@mipmap/back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_doc_detail_back"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_doc_photo"
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/partner_luffy" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="肖新华"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_big" />

                            <TextView
                                android:id="@+id/tv_doctor_position"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="主任医师"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressBackgroundTint="@color/gray"
                                android:progressTint="@color/yellow"
                                android:rating="3"
                                android:secondaryProgressTint="@color/gray"
                                android:theme="@style/RatingBar" />

                            <TextView
                                android:id="@+id/tv_star_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="4.9"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="问诊量："
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />

                            <TextView
                                android:id="@+id/tv_seeing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2320"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专长："
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_big" />

                            <TextView
                                android:id="@+id/tv_doctor_specialty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="高血压病"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="所属医院："
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_big" />

                            <TextView
                                android:id="@+id/tv_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="主任医师"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_small" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="当日预约详细时间（灰色时间段为不可预约）"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small" />

            <com.moe.wl.framework.widget.NoSlidingGridView
                android:id="@+id/nsgv_doc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1000"
                android:gravity="center_horizontal"
                android:numColumns="4" />
            <!--通过linearLayout添加子view-->
            <!--<LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <lin
            </LinearLayout>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="设置开始前30分钟提醒"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/sp_small" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#1000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="个人简介："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_big" />

            <TextView
                android:id="@+id/tv_content_recomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="  个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介
            绍个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介绍个人简介内容介绍
            个人简介内容介绍个人简介内容介绍"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#1000"
                android:padding="8dp"
                android:text="用户评价"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_small" />

            <com.moe.wl.ui.mywidget.NoSlideRecyclerView
                android:id="@+id/nsrlv_doc_tetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_check_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="查看全部（211）"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#1000" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_doc_detial_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@mipmap/tab3_y" />

        <TextView
            android:id="@+id/tv_now_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#2000"
            android:clickable="true"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sp_bigger" />
    </LinearLayout>
</RelativeLayout>
