<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_office_category"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.moe.wl.framework.widget.TitleBar
        android:id="@+id/sp_category_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
         />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_category"
        app:tabSelectedTextColor="@color/bg_category"
        app:tabIndicatorColor="@color/bg_category"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        android:background="@color/white"
        app:tabTextColor="@color/tv_black"

        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
